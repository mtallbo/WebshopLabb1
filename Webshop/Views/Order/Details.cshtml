@model Webshop.Models.Order

@{
    ViewData["Title"] = "Index";
}


<div class="table-responsive">
    <form asp-action="Checkout" asp-controller="Order" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="border-0 bg-light">
                        <div class="p-2 px-3 text-uppercase">Produkt</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                        <div class="py-2 text-uppercase">Pris</div>
                    </th>
                    <th scope="col" class="border-0 bg-light">
                        <div class="py-2 text-uppercase">Antal</div>
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model.OrderItems)
            {
                <tbody>
                    <tr>
                        <td class="border-0 align-middle"><strong>@item.Name</strong></td>

                        <td class="border-0 align-middle"><strong>@item.Price</strong></td>
                        <td class="border-0 align-middle"><strong class="float-left ">@item.Quantity</strong></td>

                    </tr>
                </tbody>
            }
        </table>
        <div class="col-lg-12">
            <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Ordern skicka till</div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="p-4">
                        <p class="text-muted"><strong>Namn:</strong> @Model.FirstName @Model.LastName</p>
                        <p class="text-muted"><strong>Email:</strong> @Model.Email</p>
                        <p class="text-muted"><strong>Telefonnummer:</strong> @Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="p-4">
                        <p class="text-muted"><strong>Adress:</strong> @Model.Adress</p>
                        <p class="text-muted"><strong>Stad:</strong> @Model.City</p>
                        <p class="text-muted"><strong>Postnummer:</strong> @Model.PostalCode</p>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>