@model IEnumerable<Webshop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Produkter</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    <img class="card-img" src="@item.ImageURL" alt="@item.Name">
                    <div class="card-body">
                        <h4 class="card-title">@item.Name</h4>
                        <p class="card-text">
                            @item.Description
                        </p>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="price text-success"><h5 class="mt-4">SEK @item.Price</h5></div>
                            <a href="#" class="btn btn-danger mt-3"><i class="fas fa-shopping-cart"></i>Lägg till</a>
                        </div>
                    </div>
                </div>
            </div>
    }
        </div>
    </div>
